<div class="container">
  <div class="col-md-7 offset-md-3">

    <h1 class="text-center mb-5">編集画面</h1>
    <%= form_with model: @question, local:true do |f| %>
      <div class="m-3">
        <h4 class="my-3">タイトル</h4>
          <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="m-3">
        <h4 class="my-3">本文</h4>
          <%= f.text_area :content, class: "form-control" %>
      </div>
      <div class="m-3">
        <h4 class="my-3">製作行程</h4>
        <div class="radio-inline">
          <%= f.collection_radio_buttons :making_genre_id, @making_genres, :id, :name %>
        </div>
      </div>
      <div class="m-3">
        <h4 class="my-3">パンの種類</h4>
        <div class="radio-inline">
          <%= f.collection_radio_buttons :bread_genre_id, @bread_genres, :id, :name %>
        </div>
      </div>
      <div class="m-3">
        <h4 class="my-3">画像</h4>
          <%= attachment_image_tag @question, :image, :fill, 60, 60, fallback: "no_image2.jpg"%>
          <%= f.attachment_field :image, placeholder: "画像" %>
      </div>
      <div class="mt-5 text-center">
        <%= f.submit '保存する' , class: "btn-light common-btn px-3 my-3" %>
      </div>
    <% end %>

  </div>
</div>
