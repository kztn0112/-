
<h1>質問編集画面</h1>
<!-- form_with部分 -->
<%= form_with model:@question, local: true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>質問内容</h4>
  <%= f.text_field :content %>
  <h4>写真</h4>
   <%= attachment_image_tag @question, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
   <%= f.attachment_field :image, placeholder: "画像" %>
  <%= f.submit '保存' %>
<% end %>

<%= link_to '戻る', questions_path %>