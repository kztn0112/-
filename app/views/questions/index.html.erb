<div class="container">
  <% if params[:user_id].present? %>
    <h3 class="text-center"><%= @user.name %>さんの質問履歴</h3>
  <% elsif params[:type] == 'making' %>
     <h3 class="text-center">制作工程：<%= @making_genre.name %></h3>
  <% elsif params[:type] == 'bread' %>
    <h3 class="text-center">パンの種類：<%= @bread_genre.name %></h3>
  <% else %>
    <h3 class="text-center">質問一覧</h3>
    <div class="text-right mr-5">
    <%= link_to '回答受付中の質問はこちら', unsolved_questions_path %>
    </div>
  <% end %>

  <%= render 'questions/index', questions: @questions ,making_genre: @making_genre,bread_genre: @bread_genre ,user: @user %>
</div>
