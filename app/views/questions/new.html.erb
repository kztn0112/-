<h1>Questions#new</h1>

<%= form_with model: @question, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :content %>
  <h4>製作行程</h4>
  <div class="radio-inline">
    <%= f.collection_radio_buttons :making_genre_id, @making_genres, :id, :name %>
  </div>
  <h4>パンの種類</h4>
  <div class="radio-inline">
    <%= f.collection_radio_buttons :bread_genre_id, @bread_genres, :id, :name %>
  </div>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <%= f.submit '投稿' %>
<% end %>
