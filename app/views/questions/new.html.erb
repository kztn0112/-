<h1>Questions#new</h1>
<!-- form_with部分 -->
<%= form_with model: @question, url:'/questions', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :content %>
  <h4>製作行程</h4>
  <%= f.text_area :making_genre %>
  <h4>パンの種類</h4>
  <%= f.text_area :bread_genre %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <%= f.submit '投稿' %>
<% end %>
