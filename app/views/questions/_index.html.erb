<% questions.each do |question| %>
  <span><%= link_to question.title, question_path(question)  %></span>
  <%= attachment_image_tag question, :image, :fill, 100, 100, format: 'jpeg' %>
  <%= attachment_image_tag question.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
   <div><%= "#{question.answers.count} コメント" %></div>
   <div class="question_<%= question.id %>">
　  <%= render "questions/resolved", question: question %>
  </div>

<% end %>


<%= paginate questions %>

