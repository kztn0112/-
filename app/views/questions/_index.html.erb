<% if questions.count == 0 %>
<p class="text-center">該当する質問はありません。</p>
<% end %>
<br>
<div class="row">
<% questions.each do |question| %>
<div class="col-4">
  <div class="card m-5" style="width: 18rem;">
    <div class="card-img-top">
    <%=link_to question_path(question) do %>
    <%= attachment_image_tag question, :image,:fill, 286, 200, format: 'jpeg',fallback: "no_image.jpg" %>
    <% end %>
    </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to question.title, question_path(question)  %></h5>
    <%=link_to user_path(question.user) do %>
    <%= attachment_image_tag question.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
    <% end %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= "#{question.answers.count} コメント" %></li>

    <li class="list-group-item">
      <div class="question_<%= question.id %>">
　  <%= render "questions/resolved", question: question %>
  </div>
  </li>
  </ul>
  <div class="card-body">
    <span class="making_genre"><%= question.making_genre.name %></span>
    <span class="bread_genre"><%= question.bread_genre.name %></span>
  </div>
</div>
</div>
<% end %>

</div>
<%= paginate questions %>

</div>