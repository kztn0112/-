<h1>Questions#show</h1>

<div class="post-body">
  <p>タイトル：<%= @question.title %></p>
  <p>質問内容：<%= @question.content %></p>
  <p> <%= attachment_image_tag @question, :image, :fill, 100, 100, format: 'jpeg' %></p>
  <p>投稿日時：<%= @question.created_at.strftime('%Y/%m/%d') %></p>
</div>

<% if @question.user == current_user %>
    <%= link_to "編集", edit_question_path(@question) %>
    <%= link_to "削除", question_path(@question), method: :delete %>
  <% end %>
 <%= link_to '戻る', questions_path %>