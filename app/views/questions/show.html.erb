<h1>Questions#show</h1>

<div class="post-body">
  <p>タイトル：<%= @question.title %></p>
  <p>質問内容：<%= @question.content %></p>
  <p>制作工程：<%= @question.making_genre.name %></p>
  <p>パンの種類：<%= @question.bread_genre.name %></p>
  <p> <%= attachment_image_tag @question, :image, :fill, 100, 100, format: 'jpeg' %></p>
  <p>投稿日時：<%= @question.created_at.strftime('%Y/%m/%d') %></p>
   <p>質問者：<%= link_to user_path(@question.user_id) do %>
   <%= @question.user.name %>
   <%= attachment_image_tag @question.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
   <% end %>
   </p>
</div>

<% if @question.user == current_user %>
    <%= link_to "編集", edit_question_path(@question) %>
    <%= link_to "削除", question_path(@question), method: :delete %>
  <% end %>



<div class="question_<%= @question.id %>">
　<%= render "resolved", question: @question %>
</div>

<div class="comments">
<p>コメント件数：<%= @question.answers.count %></p>
<% @question.answers.each do |answer| %>
<%= attachment_image_tag answer.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  <%= answer.user.name %>
  <%= answer.created_at.strftime('%Y/%m/%d') %><%= answer.content %><br>
   <% if answer.user == current_user %>
  <div class="comment-delete">
    <%= link_to "削除", question_answer_path(answer.question, answer), method: :delete %>
  </div>
  <% end %>

  <div class="answer_<%= answer.id %>">
　<%= render "likes/like", question: @question ,answer: answer, like: answer.likes.first %>
  </div>

<% end %>
</div>

<% if @answer.errors.any? %>
  <%= @answer.errors.count %>件のエラーが発生しました
  <% @answer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="new-comment">
<%= form_with(model:[@question, @answer], local: true) do |f| %>
  <%= f.text_area :content, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>




 <%= link_to '戻る', questions_path %>