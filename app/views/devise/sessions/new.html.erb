<div class="container">
  <h2 class="pt-5  pr-4 text-center">ログイン</h2>
  <div class="d-flex align-items-center justify-content-center">

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field m-3">
        <%= f.label :email,"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field m-3">
        <%= f.label :password,"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field m-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,"ログイン状態を保存する" %>
        </div>
      <% end %>

      <div class="actions mt-5 text-center">
        <%= f.submit "ログイン", class: "btn-light common-btn px-1 mr-3"%>
      </div>
    <% end %>

  </div>
</div>
