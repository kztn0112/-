          <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
          </div>
          <li><div class="ml-5"><%= link_to ' マイページ', user_path(current_user.id),    class: "btn btn-light btn-outline-dark" %></div></li>
          <li><div class="ml-5"><%= link_to ' 通知', notifications_path,class: "btn btn-light btn-outline-dark" %></div></li>
