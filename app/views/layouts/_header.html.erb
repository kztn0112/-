          <li><div class="ml-5"><%= link_to ' 質問新規投稿', new_question_path, class: "btn btn-light btn-outline-dark" %></div></li>
         <% else %>
          <li><div class="ml-5"><%= link_to ' top', root_path,class: "btn btn-light btn-outline-dark" %></div></li>
          <li><div class="ml-5"><%= link_to ' 新規登録', new_user_registration_path, class: "btn btn-light btn-outline-dark" %></div></li>
          <li><div class="ml-5"><%= link_to ' ログイン', new_user_session_path ,class: "btn btn-light btn-outline-dark" %></div></li>
