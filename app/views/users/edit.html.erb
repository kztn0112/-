<div class="container">
  <div class="col-6 offset-3">
    <h1 class="text-center mb-5">プロフィール編集</h1>

    <%= render "layouts/error", object: @user %>

    <%= form_with model: @user, local:true do |f| %>
      <div class="m-3">
        <h4 class="my-3">名前</h4>
          <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="m-3">
        <h4 class="my-3">自己紹介</h4>
          <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="m-3">
        <h4 class="my-3">プロフィール画像</h4>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,class: "rounded-circle" %>
          <%= f.attachment_field :profile_image, placeholder: "画像" %>
      </div>
      <div class="mt-5 text-center">
         <%= f.submit '保存する' %>
      </div>
   　 <% end %>

  </div>
</div>
