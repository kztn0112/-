<h3 class="m-4">マイページ</h3>
  <div class="myinformation ">

    <table class="table table-bordered my-3">
      <thead>
        <tr>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @user.introduction %></th>
        </tr>
      </thead>
    </table>
     <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  </div>





<p>質問履歴</p>
<!--アプリケーション2を学ぼう6章参考-->


  <% @questions.each do |question| %>
<div>
  <%= link_to question_path(question.id) do %>
  <%= attachment_image_tag question, :image, :fill, 100, 100, format: 'jpeg' %>
  <% end %>
  <p>タイトル：<%= question.title %></p>
  <p>質問内容：<%= question.content %></p>
  <p>ユーザーネーム：<%= question.user.name %></p>
</div>
<% end %>