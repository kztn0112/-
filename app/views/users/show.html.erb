<div class="container">

  <h3 class="text-center mb-4">
    <% if @user.id == current_user.id %>
      マイページ
  　<% else %>
  　   <%= @user.name %>さんのページ
  　<% end %>
  </h3>

  <div class="information  col-md-7 offset-md-3">
    <div class="m-3">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",class: "profile-image" %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
      </thead>
    </table>

    <% if @user.id == current_user.id %>
      <div class="text-right m-2"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
    <% end %>
  </div>

  <%= form_with url:questions_path,method: :get,required: true , local: true  do |f| %>
    <%= hidden_field_tag :user_id  , @user.id %>
    <%= f.submit "質問履歴を見る",class: "common-btn btn-light col-md-2 offset-md-8 col-6 offset-6 mb-5" %>
  <% end %>

</div>

