<% if answer.liked_by?(current_user) %>
    <p>
      <%= link_to question_answer_like_path(question,answer,like), method: :delete, remote:true, class:"favorite-btn" do %>
        <i class="fas fa-thumbs-up"></i>
        <%= answer.likes.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to question_answer_likes_path(question,answer), method: :post ,remote:true, class:"favorite-btn" do %>
        <i class="far fa-thumbs-up"></i>
        <%= answer.likes.count %>
      <% end %>
    </p>
  <% end %>
